#Lammps input file generated by ForcePy
units real

timestep 1.0

atom_style full
read_data cg_fm.data

pair_style table linear 10000

pair_coeff 1 1 cg_force_pair.table SF_Pairwise_CIS_CIS 15
pair_coeff 1 2 cg_force_pair.table SF_Pairwise_CIS_TRANS 15
pair_coeff 2 2 cg_force_pair.table SF_Pairwise_TRANS_TRANS 15

velocity all create 300.0 2374323

#compute		1 all rdf 100

fix		1 all nvt temp 300.0 300.0 100.0
#fix		2 all ave/time 1000 9001 10000000 c_1 file rdf_lammps.dat mode vector
#fix		3 all ucg_state_trans rates.dat mhcorr mh_correction.dat

fix             UCG all ucg_state_trans3_3_1 2222 Beta 1.6775 nspecies 1 nstates 2 speciesbeads 1 aoffset 1 boffset 0 rates rates.in mhcorr mh_correction.dat  restrictmol restrictmol.in

#dump 		1 all atom 1000 dump.lammpstrj
#dump 		2 all dcd 1000 dump.dcd

#dump_modify	1 sort id

thermo 1000

restart 1000000 restart

run 10000000
